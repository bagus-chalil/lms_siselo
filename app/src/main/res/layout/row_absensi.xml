<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_absen">
        <RelativeLayout
            android:layout_width="50dp"
            android:background="@drawable/user_bg"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/prefix"
                android:layout_width="20dp"
                android:src="@drawable/ic_book_solid"
                android:layout_centerInParent="true"
                android:layout_height="35dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/kelas"
            android:layout_width="wrap_content"
            android:text="Kelas"
            android:textSize="30px"
            android:layout_toLeftOf="@+id/imageMore"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nama_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/kelas"
            android:text="10"
            android:textColor="@color/colorWhite"
            android:textSize="30px" />
        <TextView
            android:id="@+id/nama_matpel"
            android:layout_width="wrap_content"
            android:text="larntech"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/selengkapnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_matpel"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@+id/imageMore"
            android:text="Lihat Selengkapnya"
            android:textColor="@color/colorWhite"
            android:textSize="30px" />
        <ImageView
            android:id="@+id/imageMore"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/nama_matpel"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>